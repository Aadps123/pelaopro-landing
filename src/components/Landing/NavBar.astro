<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=menu" />

<!-- Navbar -->
<header>
<!--Logo -->
    <a href="https://pelaopro.vercel.app/" class="logo"><img src="https://cdn.jsdelivr.net/gh/Aadps123/pelaopro-landing@main/Cloudfare/Logo_Black.png" alt="Logo" loading="eager"></a>
    <!-- Navbar links -->
    <ul class="navbar" id="navbar">
           <li><a href="/nosotros">Nosotros</a></li>
           <li><a href="/replicabilidad">Replicabilidad</a></li>
           <li><a href="/chatbot">Chatbot</a></li>
           <li><a href="/faqs">FAQ's</a></li>
           <li><a href="/apoyanos" style="font-weight: bold;">Apóyanos</a></li>
            <li><a href="#" class="x"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgba(0, 0, 0, 1);transform: ;msFilter:;"><path d="m16.192 6.344-4.243 4.242-4.242-4.242-1.414 1.414L10.535 12l-4.242 4.242 1.414 1.414 4.242-4.242 4.243 4.242 1.414-1.414L13.364 12l4.242-4.242z"></path></svg></a></li>
    </ul>
    <!-- Menu Icon -->
    <div class="hamburger" id="menu-icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgba(0, 0, 0, 1);transform: ;msFilter:;"><path d="M4 6h16v2H4zm0 5h16v2H4zm0 5h16v2H4z"></path></svg>
    </div>
</header>
<style>
    * {
        /*Overall*/
        overflow-x: hidden;
        /*Styles*/
        list-style: none;
        text-decoration: none;
        /*Font styles*/
        color: black;
        font-family: poppins, sans-serif;
        font-size: clamp(1rem, 2vw, 12px.);
    }
    header {
        /*Margin, padding, sizing*/
        padding-top: 25px;
        margin-left: 10%;
        padding-bottom: 10px;
        width: 100%;
        /*Styles*/
        position: fixed;
        z-index: 1000;
        display: flex;
        transition: all 0.5 ease;
    }
    .logo img {
        /*Size*/
        width: auto;
        height: 45px;
    }
/*Navbar*/
    .navbar {
        /*Margin, padding, sizing*/
        /*Styles*/
        display: flex;
        text-align: center;
        padding-left: 0;
        margin-left: 25px;
        gap: 20px;
        
    }
  
    .navbar li {
        /*Styles*/
        display: flex;
        justify-content: center;
        
    }
    .navbar a {
        padding: 0 0;
        margin: 0px 15px;
        transition: all .5s ease;
        padding-left: 0;
        margin-left: 0;
    }
    .navbar a:hover {
        /*Styles*/
        background-color: #d0ff0079;
        text-decoration: none;
    }
    .x {
        display: none;
       align-items: center;
       cursor: pointer;
    }
    /*Menu Icon*/
    .hamburger  {
       display: none;
       align-items: center;
       cursor: pointer;
       z-index: 1001;
       
    }
    @media (max-width: 1280px) {
        header {
            padding: 14px 2%;
            transition: .2s;
        }
       
       .navbar a {
        padding: 5px 0;
        margin: 0px 20px;
       }
       .x {
        display: none;
    }
    }
    @media (max-width: 1080px) {
        header {
            margin-left: 5%;
            margin-top: 20px;
        }
        .logo img {
            position: fixed;
            height: 25px;
            padding-top: 12px;
        }
        .hamburger {
            display: block;
            padding-top: 15px;
            position: absolute;
            left: 85%;
            transform: translateX(-80%);
        }
        .navbar {
            /*Position, Margin, Padding */
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            padding-top: 20px;
            padding-bottom: 10px;
            gap: 20px;
            padding-left: 20px;
            padding-right: 20px;
            /* Translate*/
            align-items: center;
            margin-left: auto;
            margin-top: 50px;
            margin-right: 17%;
            /*Size*/
            width: 140px;
            height: auto;
            border-radius: 10px;
            /*transition*/
            transition: all 0.5s ease;  
            /*Styles*/
            background-color: white;
            box-shadow: 5px 2px 10px rgba(0, 0, 0, 0.123);
            
            /* Ocultar navbar por defecto */
            opacity: 0;
            pointer-events: none;
            transform: translateY(-20px);
        }
        
        /* Mostrar navbar cuando está activo */
        .navbar.active {
            opacity: 1;
            pointer-events: all;
            transform: translateY(0);
        }
        
        .navbar li {
            width: 100%;
        }
        
        .navbar ul {
            color: white;
            margin: 0px 0px;
            padding-left: 0;
        }
        
        .x {
            display: block;
            align-items: center;
        }
        
        /* Estilo para el botón X cuando está activo */
        .x.active {
            display: block;
        }
    }
    /*Tablets*/
    @media (min-width: 600px) and (max-width: 1024px) {
        .logo img {
            height: 50px;
        }
        .hamburger {
            font-size: 50px;
        }
    } 
</style>
<script>
    // Esperar a que el DOM esté completamente cargado
    document.addEventListener('DOMContentLoaded', function() {
        const menuIcon = document.getElementById("menu-icon");
        const navbar = document.getElementById("navbar");
        const x = document.querySelector(".x");
        
        // Comprobar si los elementos existen antes de añadir eventos
        if (menuIcon && navbar) {
            menuIcon.addEventListener("click", () => {
                navbar.classList.toggle("active");
            });
        }
        
        // Cerrar el menú cuando se hace clic en la X
        if (x && navbar) {
            x.addEventListener("click", (e) => {
                e.preventDefault();
                navbar.classList.remove("active");
            });
        }
    });
</script>