<style>
    /* Base Styles */
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }
    body {
        overflow-x: hidden;
    }
    .Main {
        position: relative;
        overflow: hidden;
        padding: 50px 20px;
        margin: 20px auto 0;
        max-width: 1400px;
        height: 780px;
    }
    .Container {
        position: relative;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 30px;
        z-index: 1;
    }
    
    /* Desktop horizontal layout */
    .content-wrapper {
        display: flex;
        width: 100%;
        align-items: center;
        justify-content: space-between;
        gap: 40px;
    }
    
    .Title {
        width: 40%;
        display: flex;
        align-items: center;
    }
    
    .defo {
        width: 60%;
    }
    
    .Pregunta {
        height: 120px;
        width: auto;
        position: relative;
        top: 46%;
        transform: translateY(0%);
        /*Animacion*/
        transition: all 0.5s ease;

    }
    
    .CloudOne {
        height: 200px;
        width: auto;
        position: relative;
        margin-top: 30%;
        margin-left: -31%;
        /*Animacion*/
        transition: all 0.5s ease;

    }
    
    h1 {
        font-size: 32px;
        margin-bottom: 15px;
    }
    p {
        width: 100%;
        font-size: 20px;
        text-align: justify;
        margin-bottom: 15px;
    }
    .ProyectoDef, .Horas, .Tought {
        margin-bottom: 40px;
        /*Animacion*/
        transition: all 0.5s ease;
    }
    .Subdivision {
        margin-left: 20px;
        margin-top: 15px;
    }
    .sub {
        margin-bottom: 15px;
    }
    
    /* Tablet & Mobile Vertical Layout */
    @media (max-width: 1024px) {
        .Main {
            height: 950px;
        }
        .content-wrapper {
            flex-direction: column;
            gap: 20px;
        }
        
        .Title {
            width: 100%;
            flex-direction: row;
            justify-content: center;
            margin-bottom: 30px;
            flex-wrap: wrap;
            height: 150px;
        }
        
        .defo {
            width: 100%;
        }
        
        .Pregunta { 
            height: 100px;
            margin-bottom: 0;
            left: -11%;
            top: -50%;
            margin-top: 0%;
            padding-top: 0%;

        }
        
        .CloudOne {
            height: 70px;
            left: 14%;
            top: -120%;
        }
        
        h1 {
            font-size: 28px;
            text-align: center;
        }
        p {
            font-size: 18px;
            width: 60%;
            margin: 0 auto;
        }
    }
    
    /* Mobile Responsive */
    @media (max-width: 500px) {
        .Main {
            padding: 30px 15px;
            height: 1150px;
        }
        
        .Title {
            margin-bottom: 20px;
            height: 100px;
            
        }
        
        .Pregunta {
            height: 80px;
            left: -3vh;
            margin: 0 auto;
        }
        .CloudOne {
            top: -60%;
            left: -20%;
        }

        .Emoji {
            height: 35px;
            margin-bottom: 10px;
        }
        
        h1 {
            font-size: 24px;
            width: 55%;
            margin: 0 auto;
            padding-bottom: 20px;
        }
        p {
            font-size: 16px;
            width: 70%;
        }
        .Subdivision {
            margin-left: 10px;
        }
    }
    
   
    /*Laptop*/
    @media (min-width: 1025px) and (max-width: 1440px) {
        h1 {
            font-size: 26px;
        }
        p {
            width: 87%;
        }
        .Pregunta {
            left: 20%;
        }
        .CloudOne {
            left: 23%;
        }
    }
</style>