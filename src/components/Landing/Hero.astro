            /*Size*/
            width: auto;
            height: 350px;
            /*Posicion*/
            rotate: 10deg;
            position: absolute;
            left: 62%;
            top: 15%;
        }
        /*Texto*/
        .heroText {
            /*Posicion*/
            text-align: center;
            /*Size*/
            width: 100%;
            margin-top: 0px;
            font-size: 32px;
             /*Posicion*/
             z-index: 1;
            margin: 0 auto; 
