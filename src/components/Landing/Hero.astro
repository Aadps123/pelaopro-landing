---
import Downarrow from './Downarrow.astro';
---
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Caveat:wght@400..700&family=Dancing+Script:wght@400..700&family=Work+Sans:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

<div class="hero">
  <div class="heroImgs">
    <div class="heroMainImgs">
      <img src="https://cdn.jsdelivr.net/gh/Aadps123/pelaopro-landing@main/Cloudfare/P_Mid.png" alt="PU" class="PersonaUno" loading="eager">
      <img src="https://cdn.jsdelivr.net/gh/Aadps123/pelaopro-landing@main/Cloudfare/P_Right.png" alt="PD" class="PersonaDos" loading="eager">
      <img src="https://cdn.jsdelivr.net/gh/Aadps123/pelaopro-landing@main/Cloudfare/Bush_Left.png" alt="BL" class="Bush_Left" loading="eager">
      <img src="https://cdn.jsdelivr.net/gh/Aadps123/pelaopro-landing@main/Cloudfare/Bush_Right.png" alt="BR" class="Bush_Right" loading="eager">
      <img src="https://cdn.jsdelivr.net/gh/Aadps123/pelaopro-landing@main/Cloudfare/P_Left.png" alt="PL" class="Persona_Left" loading="eager">
      <img src="https://cdn.jsdelivr.net/gh/Aadps123/pelaopro-landing@main/Cloudfare/Animal_1.png" alt="A1" class="Colibri" loading="eager">
      <img src="https://cdn.jsdelivr.net/gh/Aadps123/pelaopro-landing@main/Cloudfare/Flower_Yellow.png" alt="Ye" class="FYellow" loading="eager">
      <img src="https://cdn.jsdelivr.net/gh/Aadps123/pelaopro-landing@main/Cloudfare/Flower_White.png" alt="Wh" class="FWhite" loading="eager">
      <img src="https://cdn.jsdelivr.net/gh/Aadps123/pelaopro-landing@main/Cloudfare/Flower_Red.png" alt="Ro" class="FRed" loading="eager">
      <img src="https://cdn.jsdelivr.net/gh/Aadps123/pelaopro-landing@main/Cloudfare/Photo_Hero_1.png" alt="PH1" class="Photo1" loading="eager">
      <img src="https://cdn.jsdelivr.net/gh/Aadps123/pelaopro-landing@main/Cloudfare/Photo_Hero_2.png" alt="PH2" class="Photo2" loading="eager">
    </div>
    <div class="HeroBack">
      <img src="https://cdn.jsdelivr.net/gh/Aadps123/pelaopro-landing@main/Cloudfare/Background.png" alt="Fondo" class="fondo" loading="eager">
    </div>
  </div>
  <div class="heroText">
    <p>"El genio se hace con un 1% de talento y un 99% de trabajo duro."</p>
    <img src="https://cdn.jsdelivr.net/gh/Aadps123/pelaopro-landing@main/Cloudfare/Graph_Albert.png" alt="Albert" class="FirmaAlbert" loading="eager">
    <Downarrow></Downarrow>
  </div>
</div>

<style>
  * {
    overflow-x: hidden;
    z-index: 1;
    margin-top: 50px;
    margin-right: 0px;
    box-sizing: border-box;
  }

  .heroImgs {
    height: 600px;
    padding-bottom: 10px;
    overflow-y: hidden;
    margin-top: 0px;
  }

  .heroMainImgs {
    height: 600px;
    margin-top: 0px;
  }

  .fondo {
    z-index: 1;
    width: 100%;
    max-height: 854px;
    position: absolute;
    top: 40%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .PersonaUno {
    max-height: 630px;
    position: absolute;
    z-index: 90;
    top: 10%;
    left: 47.5%;
    transform: translate(-47.5%, -10%);
  }

  .PersonaDos {
    height: 504px;
    position: absolute;
    z-index: 89;
    left: 53%;
    top: 15%;
  }

  .Persona_Left {
    z-index: 86;
    height: 400px;
    width: auto;
    position: absolute;
    top: 18%;
    left: 28%;
  }

  .Colibri {
    width: auto;
    height: 130px;
    z-index: 88;
    position: absolute;
    top: 40%;
    left: 20%;
    transition: all 0.5s ease;
  }

  .FYellow, .FWhite, .FRed {
    z-index: 88;
    position: absolute;
    width: auto;
    height: 70px;
  }

  .FYellow { top: 56%; left: 33%; }
  .FWhite { top: 44%; left: 68%; }
  .FRed {
    top: 12%;
    left: 49%;
    z-index: 91;
  }

  .Bush_Left {
    width: 1100px;
    height: auto;
    z-index: 87;
    position: absolute;
    top: 40%;
    left: 15%;
    display: flex;
    transition: all 0.5s ease;
  }

  .Bush_Right {
    z-index: 86;
    width: 503px;
    position: absolute;
    top: 33%;
    left: 55%;
    transition: all 0.5s ease;
  }

  .Photo1 {
    z-index: 85;
    width: auto;
    height: 250px;
    rotate: -10deg;
    position: absolute;
    top: 25%;
    left: 18%;
  }

  .Photo2 {
    z-index: 85;
    width: auto;
    height: 350px;
    rotate: 10deg;
    position: absolute;
    left: 62%;
    top: 15%;
  }

  .heroText {
    text-align: center;
    font-size: 32px;
    font-family: Caveat;
    z-index: 1;
    margin: 0 auto;
    width: 30%;
  }

  .FirmaAlbert {
    margin-top: -10px;
    margin-bottom: 0px;
    z-index: 2;
    width: auto;
    height: 65px;
    position: relative;
  }

  @media (max-width: 1080px) {
    .heroImgs {
      height: 380px;
      padding-bottom: 10px;
      overflow-y: hidden;
    }

    .fondo {
      top: 28%;
      height: 250px;
    }

    .PersonaUno {
      height: 350px;
      left: 43%;
      top: 8%;
      transform: translate(-45%, -5%);
    }

    .PersonaDos {
      height: 150px;
      width: auto;
      top: 17%;
      left: 60%;
      transition: all 0.5s ease;
    }

    .Persona_Left {
      height: 200px;
      top: 20%;
      left: -3%;
      transition: all 0.5s ease;
    }

    .Colibri,
    .FYellow,
    .FWhite,
    .Bush_Left,
    .Bush_Right {
      display: none;
      transition: all 0.5s ease;
    }

    .FRed {
      height: 50px;
      top: 10%;
      left: 47%;
    }

    .Photo1 {
      height: 120px;
      top: 16%;
      left: 3%;
      transition: all 0.5s ease;
    }

    .Photo2 {
      height: 10rem;
      z-index: 91;
      rotate: -10deg;
      top: 35vh;
      left: 22vh;
      transition: all 0.5s ease;
    }

    .heroText {
      width: 90%;
      font-size: 24px;
    }
  }
</style>
