<style>
    * {
        /*Overall*/
        overflow-x: hidden;
        z-index: 1;
        margin-top:50px;
        margin-right: 0px;
        box-sizing: border-box;
    }

    /*Hero*/
    .heroImgs {
        height: 600px;
        padding-bottom: 10px;
